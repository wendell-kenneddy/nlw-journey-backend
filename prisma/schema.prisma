// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  id String @id @default(uuid())
  destination String
  start_at DateTime
  ends_at DateTime
  isConfirmed Boolean
  created_at DateTime @default(now())

  @@map("trips")
}